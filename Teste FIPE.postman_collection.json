				"body": {
					"mode": "raw",
					"raw": "{\r\n    \"email\": \"api-user@test.com\",\r\n    \"password\": \"password\"\r\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{baseUrl}}auth",
					"host": [
